@using Nishkriya.Models
@using Nishkriya.Models.ViewModels
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Nishkriya - @ViewBag.Title</title>
    
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" media="screen">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
          
          <div class="row-fluid">
            
              @Html.Action("_Sidebar","Shared", new {selected = ViewBag.selectedSidebarEntry})

              <!-- Main Page Element -->
            <div class="span7">
                @Html.Partial("_Login", new AuthenticationViewModel())
    
                @RenderBody()
            </div><!--/span-->
          
          </div><!--/row-->

          <hr>

          <footer>
            <p><a href="https://twitter.com/MoonWolfCrn">@@MoonWolfCrn</a> <a href="https://twitter.com/ProNihilist">@@ProNihilist</a> <br>
            &copy; 2013</p>
          </footer>

        </div> 
    
        @Scripts.Render("~/bundles/jquery")
        <script src="/Scripts/bootstrap.min.js"></script>
        @RenderSection("scripts", required: false)
</body>
</html>
